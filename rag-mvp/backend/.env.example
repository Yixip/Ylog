# LLM 供应商：openai | ollama | dashscope
LLM_PROVIDER=openai

# OpenAI（或兼容服务）
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

# Ollama（本地小模型）
OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_MODEL=qwen2:0.5b

# 通义千问 DashScope（可选）
DASHSCOPE_API_KEY=
DASHSCOPE_MODEL=qwen-plus

# 向量库与嵌入
VECTOR_STORE=numpy        # 可选：faiss | numpy
EMBEDDING_MODEL=BAAI/bge-small-zh-v1.5
EMBEDDING_DIM=384
CHUNK_SIZE=500
CHUNK_OVERLAP=100

# 服务
HOST=0.0.0.0
PORT=8000
